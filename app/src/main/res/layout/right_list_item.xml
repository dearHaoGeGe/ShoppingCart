<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_right_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dp_6">

    <TextView
        android:id="@+id/tv_right_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_50"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_5"
        android:text="@string/appbar_scrolling_view_behavior"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2.25"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_remove_product"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:src="@mipmap/ic_remove_circle_outline_black_24dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_product_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            android:text="@string/_18"
            android:textSize="@dimen/sp_12"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_add_product"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:src="@mipmap/ic_add_circle_outline_black_24dp" />

    </LinearLayout>

</LinearLayout>